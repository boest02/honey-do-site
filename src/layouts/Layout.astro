---
const { title } = Astro.props;

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <!-- We're using Tailwind CSS which is included in the project dependencies -->
  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <main
      class="flex flex-col items-center justify-center h-full bg-gray-900 text-white p-4"
      style="min-height: 70vh;"
    >
      <slot />
    </main>

    <Footer />
  </body>
</html>
