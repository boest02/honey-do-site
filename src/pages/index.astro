---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
---

<Layout title="Home - Honey-Do Heroes">
  <Hero />
  <section class="max-w-4xl w-full p-8 mt-10 rounded-xl bg-gray-800 shadow-lg">
    <h2 class="text-3xl font-bold mb-4 text-center text-blue-400">
      Featured Services
    </h2>

    <ul class="text-center text-lg text-gray-300">
      <li>Drywall repair & painting</li>
      <li>Small renovations & carpentry</li>
      <li>TV mounting & cable management</li>
      <li>Wi-Fi setup & troubleshooting</li>
      <li>Smart doorbells, thermostats, cameras</li>
    </ul>
  </section>
</Layout>
