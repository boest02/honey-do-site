---
import "../styles/contact.css";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
---

<Layout title="About - Honey-Do Heroes">
  <section class="contact-page">
    <Hero title="Contact Us">
      <p>
        We’d love to hear from you! Whether you need a repair, a setup, or just
        have a question about our services, send us a message below. You can
        also leave us a comment about the site.
      </p>
    </Hero>

    <div class="contact-form">
      <h2>Fill out below...</h2>
      <form
        name="contact-form"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
      >
        <p hidden aria-hidden="true">
          <label>Don’t fill this out: <input name="bot-field" /></label>
        </p>

        <label for="name">Name</label>
        <input id="name" type="text" name="name" required />

        <label for="email">Email</label>
        <input id="email" type="email" name="email" required />

        <label for="message">Message / Comment</label>
        <textarea id="message" name="message" rows="5" required></textarea>

        <button type="submit">Send</button>
      </form>

      <p>
        Or call us directly: <a href="tel:+15162204640" class="underline"
          >(516) 220-4640</a
        >
      </p>
    </div>
  </section>
</Layout>
