---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
---

<Layout title="Services - Honey-Do Heroes">
  <Hero title="Our Services" />

  <section class="max-w-4xl w-full p-8 mt-10 rounded-xl bg-gray-800 shadow-lg">
    <h2 class="text-3xl font-bold mb-4 text-center text-blue-400">
      Household Fixes
    </h2>
    <ul class="text-center text-lg text-gray-300">
      <li>Drywall repair</li>
      <li>Painting & touch-ups</li>
      <li>Doors, locks, and trim</li>
      <li>Small renovations</li>
    </ul>
  </section>

  <section class="max-w-4xl w-full p-8 mt-10 rounded-xl bg-gray-800 shadow-lg">
    <h2 class="text-3xl font-bold mb-4 text-center text-blue-400">
      Technical Tasks
    </h2>
    <ul class="text-center text-lg text-gray-300">
      <li>TV & entertainment center setup</li>
      <li>Wi-Fi optimization & mesh installation</li>
      <li>Smart thermostats, plugs, lights</li>
      <li>Video doorbells & cameras</li>
    </ul>
  </section>
</Layout>
