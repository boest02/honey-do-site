---
const today = new Date();
import { SITE_EMAIL, SITE_REGION, SITE_PHONE } from "../consts";
---

<footer>
  <div class="footer-main">    
    <a
      href={"tel:+1" + SITE_PHONE}
      aria-label={"Call Honey-Do Heroes at" + SITE_PHONE}
    >
      ‚òè Call Honey-Do Heroes
    </a>

    <a href={"mailto:" + SITE_EMAIL}>{"üì¨ email: " + SITE_EMAIL}</a>
  </div>
  <p>&copy; {today.getFullYear()} Honey-Do Heroes, {SITE_REGION}</p>
  <p>All rights reserved.</p>
  <div style="margin-top: 10px;">Follow:</div>
  <div class="social-links">
    <a href="tbd" target="_blank" title="Follow us on Instagram">
      <span class="sr-only">Follow us on Instagram</span>
      <svg
        width="40px"
        height="40px"
        viewBox="0 0 32 32"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          d="M20.445 5h-8.891A6.559 6.559 0 0 0 5 11.554v8.891A6.559 6.559 0 0 0 11.554 27h8.891a6.56 6.56 0 0 0 6.554-6.555v-8.891A6.557 6.557 0 0 0 20.445 5zm4.342 15.445a4.343 4.343 0 0 1-4.342 4.342h-8.891a4.341 4.341 0 0 1-4.341-4.342v-8.891a4.34 4.34 0 0 1 4.341-4.341h8.891a4.342 4.342 0 0 1 4.341 4.341l.001 8.891z"
        ></path><path
          d="M16 10.312c-3.138 0-5.688 2.551-5.688 5.688s2.551 5.688 5.688 5.688 5.688-2.551 5.688-5.688-2.55-5.688-5.688-5.688zm0 9.163a3.475 3.475 0 1 1-.001-6.95 3.475 3.475 0 0 1 .001 6.95zM21.7 8.991a1.363 1.363 0 1 1-1.364 1.364c0-.752.51-1.364 1.364-1.364z"
        ></path></svg
      >
    </a>
  </div>
</footer>
<style>
  footer {
    padding: 2em 1em;
    background: linear-gradient(#000) no-repeat;
    color: #fff;
    text-align: center;
    font-size: 1rem;

    .footer-main {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 10px 30px;
      margin-bottom: 0.5em;
    }

    & > * {
      margin: 0.2em 0;
    }

    a {
      color: #fff;
      fill: #fff;
      text-decoration: none;
      text-underline-offset: 2px;

      &:hover {
        text-decoration: underline;
        fill: lime;
        color: lime;
      }
    }
  }
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  .social-links {
    display: flex;
    justify-content: center;
    gap: 1em;
    margin-top: 0.5em;
  }
</style>
